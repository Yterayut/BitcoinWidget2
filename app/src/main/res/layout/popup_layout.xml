<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<ScrollView 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0A0A"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        
        <!-- Connection Status Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">
            
            <TextView
                android:id="@+id/connection_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🟢 Connected"
                android:textSize="12sp"
                android:textColor="#4CAF50"
                android:gravity="start" />
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pull to refresh ↓"
                android:textSize="10sp"
                android:textColor="#808080"
                android:gravity="end" />
                
        </LinearLayout>

        <!-- Bitcoin Price Header -->
        <LinearLayout
            android:id="@+id/btc_price_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/modern_card_bg"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:elevation="8dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_bitcoin_logo"
                android:layout_marginEnd="16dp"
                android:contentDescription="Bitcoin Logo" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BITCOIN PRICE"
                    android:textSize="11sp"
                    android:textColor="#808080" />

                <TextView
                    android:id="@+id/btc_price_popup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$105,629"
                    android:textSize="32sp"
                    android:textColor="#F7931A"
                    android:textStyle="bold" />
                    
                <TextView
                    android:id="@+id/price_change_24h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📈 +2.45%"
                    android:textSize="14sp"
                    android:textColor="#4CAF50"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Live from Binance"
                    android:textSize="12sp"
                    android:textColor="#B8B8B8" />

            </LinearLayout>

        </LinearLayout>        
        <!-- Market Data Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/modern_card_bg"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:elevation="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Market Overview"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Market Cap"
                        android:textSize="12sp"
                        android:textColor="#808080" />

                    <TextView
                        android:id="@+id/market_cap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$2.1T"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dominance"
                        android:textSize="12sp"
                        android:textColor="#808080" />

                    <TextView
                        android:id="@+id/btc_dominance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="55.2%"
                        android:textSize="18sp"
                        android:textColor="#F7931A"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Circulating Supply"
                        android:textSize="12sp"
                        android:textColor="#808080" />

                    <TextView
                        android:id="@+id/supply_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="19.8M / 21M BTC"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        
        <!-- Network Data Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/modern_card_bg"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:elevation="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="⛏️ Network Data"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Block Height"
                        android:textSize="12sp"
                        android:textColor="#808080" />

                    <TextView
                        android:id="@+id/block_height"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="870,123"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Next Halving"
                        android:textSize="12sp"
                        android:textColor="#808080" />

                    <TextView
                        android:id="@+id/halving_countdown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 years, 2 months"
                        android:textSize="14sp"
                        android:textColor="#FFD93D"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mining Cost vs Price"
                        android:textSize="12sp"
                        android:textColor="#808080" />

                    <TextView
                        android:id="@+id/mining_cost_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🟢 2.3x above cost"
                        android:textSize="16sp"
                        android:textColor="#4CAF50"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Network Fees -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/modern_card_bg"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:elevation="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Network Fees"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/fee_card_low"
                    android:padding="8dp"
                    android:layout_marginEnd="4dp"
                    android:gravity="center">
                    
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SLOW"
                        android:textSize="9sp"
                        android:textColor="#FFFFFF"
                        android:gravity="center" />
                    
                    <TextView
                        android:id="@+id/fee_low"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:gravity="center" />
                    
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="sat/vB"
                        android:textSize="9sp"
                        android:textColor="#CCCCCC"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/fee_card_medium"
                    android:padding="8dp"
                    android:layout_marginEnd="4dp"
                    android:gravity="center">
                    
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="STANDARD"
                        android:textSize="9sp"
                        android:textColor="#FFFFFF"
                        android:gravity="center" />
                    
                    <TextView
                        android:id="@+id/fee_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:gravity="center" />
                    
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="sat/vB"
                        android:textSize="9sp"
                        android:textColor="#CCCCCC"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/fee_card_high"
                    android:padding="8dp"
                    android:layout_marginEnd="4dp"
                    android:gravity="center">
                    
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="FAST"
                        android:textSize="9sp"
                        android:textColor="#FFFFFF"
                        android:gravity="center" />
                    
                    <TextView
                        android:id="@+id/fee_high"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:gravity="center" />
                    
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="sat/vB"
                        android:textSize="9sp"
                        android:textColor="#CCCCCC"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/fee_card_urgent"
                    android:padding="8dp"
                    android:gravity="center">
                    
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="URGENT"
                        android:textSize="9sp"
                        android:textColor="#FFFFFF"
                        android:gravity="center" />
                    
                    <TextView
                        android:id="@+id/fee_urgent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="8"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:gravity="center" />
                    
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="sat/vB"
                        android:textSize="9sp"
                        android:textColor="#CCCCCC"
                        android:gravity="center" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Fear & Greed Index -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/modern_card_bg"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:elevation="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fear &amp; Greed Index"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/fear_greed_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="52"
                        android:textSize="80sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="😐"
                            android:textSize="18sp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/fear_greed_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Neutral"
                            android:textSize="16sp"
                            android:textColor="#FFD93D"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/fear_greed_gauge"
                        android:layout_width="180dp"
                        android:layout_height="90dp"
                        android:src="@drawable/fear_greed_gauge"
                        android:scaleType="fitCenter"
                        android:contentDescription="Fear and Greed Gauge" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/history_card_bg"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="YESTERDAY"
                        android:textSize="10sp"
                        android:textColor="#808080"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/fear_greed_yesterday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="55"
                        android:textSize="24sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:gravity="center" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/history_card_bg"
                    android:padding="12dp"
                    android:layout_marginStart="8dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LAST WEEK"
                        android:textSize="10sp"
                        android:textColor="#808080"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/fear_greed_last_week"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="61"
                        android:textSize="24sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:gravity="center" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- MVRV -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/modern_card_bg"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:elevation="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Market Valuation"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/mvrv_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2.38 - Overvalued"
                android:textSize="16sp"
                android:textColor="#FFB800"
                android:textStyle="bold"
                android:gravity="center" />

        </LinearLayout>

        <!-- Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btn_alerts"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="🔔 Alerts"
                android:textColor="#B8B8B8"
                android:background="@drawable/button_secondary_bg"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_settings"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="⚙️ Settings"
                android:textColor="#B8B8B8"
                android:background="@drawable/button_secondary_bg"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_open_main_app"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="🚀 Open Bitcoin Widget"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/button_primary_bg"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/last_updated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Updated: Sat 23:08"
            android:textSize="12sp"
            android:textColor="#F7931A"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

    </LinearLayout>

</ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
