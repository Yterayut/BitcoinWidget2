<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="#000000">

    <ImageView
        android:id="@+id/bitcoin_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_bitcoin_logo"
        android:contentDescription="Bitcoin Logo"
        android:adjustViewBounds="true"
        android:maxWidth="40dp"
        android:maxHeight="40dp" />

    <TextView
        android:id="@+id/price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/bitcoin_logo"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:text="$106357"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:ellipsize="end"
        android:maxLines="1" />

    <TextView
        android:id="@+id/time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bitcoin_logo"
        android:layout_alignParentStart="true"
        android:layout_marginTop="4dp"
        android:text="Binance @ Wed 16:26"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:ellipsize="end"
        android:maxLines="1" />
</RelativeLayout>