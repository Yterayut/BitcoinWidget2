<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a1a"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#2a2a2a"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ”” Bitcoin Price Alerts"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get notified when Bitcoin reaches your target prices"
                android:textColor="#CCCCCC"
                android:textSize="14sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Enable/Disable Switch -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#2a2a2a"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Enable Price Alerts"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Switch
                android:id="@+id/alerts_enable_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:thumbTint="#FFA726"
                android:trackTint="#555555" />
        </LinearLayout>

        <!-- Upper Price Alert (Sell Signal) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#2a2a2a"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸš€ Sell Alert (Upper Limit)"
                android:textColor="#4CAF50"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alert when Bitcoin price goes above this amount"
                android:textColor="#CCCCCC"
                android:textSize="14sp"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/upper_price_input"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="#333333"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#888888"
                    android:hint="e.g. 110000"
                    android:inputType="numberDecimal"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/set_upper_alert_button"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="SET"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:background="#4CAF50"
                    android:elevation="2dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Lower Price Alert (Buy Opportunity) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#2a2a2a"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“‰ Buy Alert (Lower Limit)"
                android:textColor="#FF5722"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alert when Bitcoin price drops below this amount"
                android:textColor="#CCCCCC"
                android:textSize="14sp"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/lower_price_input"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="#333333"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#888888"
                    android:hint="e.g. 95000"
                    android:inputType="numberDecimal"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/set_lower_alert_button"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="SET"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:background="#FF5722"
                    android:elevation="2dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Alert Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#2a2a2a"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“Š Current Status"
                android:textColor="#FFA726"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/alert_status_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ”• Alerts disabled"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.3" />
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/clear_alerts_button"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="ðŸ—‘ï¸ CLEAR ALL"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="#666666"
                android:layout_marginEnd="4dp"
                android:elevation="2dp" />

            <Button
                android:id="@+id/test_alert_button"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="ðŸ§ª TEST"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="#FF6B35"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:elevation="2dp" />

            <Button
                android:id="@+id/back_button"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="â† BACK"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="#333333"
                android:layout_marginStart="4dp"
                android:elevation="2dp" />
        </LinearLayout>

        <!-- Info Footer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#333333"
            android:padding="12dp"
            android:elevation="1dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â„¹ï¸ Alert Information"
                android:textColor="#FFA726"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â€¢ Alerts check price every minute\nâ€¢ 30-minute cooldown between notifications\nâ€¢ Notifications require permission\nâ€¢ Keep app running in background"
                android:textColor="#CCCCCC"
                android:textSize="12sp"
                android:lineSpacingMultiplier="1.4" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>